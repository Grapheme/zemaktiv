doctype html
- var title = ''

block vars 
    
html.no-js(lang="")
  head
    meta(charset="utf-8")
    meta(name="description", content="")
    meta(name="viewport", content="width=device-width, initial-scale=1, minimal-ui")
    title #{title}
    // link(rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css")
    // Place favicon.ico and apple-touch-icon.png in the root directory
    // build:css styles/main.css
    link(rel="stylesheet", href="styles/vendor.css")
    link(rel="stylesheet", href="styles/main.css")
    // endbuild
    // build:js scripts/vendor/modernizr.js
    // endbuild
  body
    header.header.js-header
        .header__top
            .top__big
                a(href="#").big__logo
                a.big__right
            .top__min
                a(href="#").min__item.item-apple
                a(href="#").min__item.item-title Коттеджный посёлок
                a(href="#").min__item.item-name
                a(href="#").min__item.item-text
        .header__menu
            nav.menu__nav
                ul
                    li.nav__item.item-us.item-raspb
                        a(href="#").item__link
                            span Выбор участка
                    li.nav__item.item-us.item-green
                        a(href="#").item__link
                            span Готовые дома
                    li.nav__item.item-us.item-blue
                        a(href="#").item__link
                            span Коммуникации
                    li.nav__item.item-us.item-red
                        a(href="#").item__link
                            span Расположение
                    li.nav__item.item-us.item-yellow
                        a(href="#").item__link
                            span Фотографии
                    li.nav__item.item-us.item-orange
                        a(href="#").item__link
                            span О проекте
                ul
                    li.nav__item.item-call
                        a(href="#" data-open="call").item__link.js-open-overlay
                            span Заказать звонок
                    li.nav__item.item-phone
                        a(href="tel:+74952495555").item__link
                            span +7 (495) 249-55-55
    main.main.js-main
        block content
        .overlay.js-overlay
            .overlay__block.block-book.js-overlay-block(data-name="book")
                .wrapper
                    a(href="#").block__close.js-close-overlay
                    .block-cont
                        .book__title
                            span Участок №250, вторая очередь, 13,95 соток
                        .overlay__form
                            input(type="hidden" name="id")
                            .form__block.block-phone
                                .block__title Ваш номер телефона
                                .block__input
                                    .phone__number +7
                                    input(type="text" name="phone").input__item
                            .form__block
                                .block__title Имя
                                .block__input
                                    input(type="text" name="name").input__item
                            .form__block
                                .block__title Почта
                                .block__input
                                    input(type="text" name="email").input__item
                            .form__btn
                                button(type="submit").us-btn.btn-transparent
                                    span Забронировать
            .overlay__block.block-call.js-overlay-block(data-name="call")
                .wrapper
                    a(href="#").block__close.js-close-overlay
                    .block-cont
                        .overlay__form
                            .form__block.block-phone
                                .block__title Ваш номер телефона
                                .block__input
                                    .phone__number +7
                                    input(type="text" name="phone").input__item
                            .form__btn
                                button(type="submit").us-btn.btn-transparent
                                    span Обратный звонок
    footer.footer
        .wrapper
            .footer__left
                .left__block
                    .block__link
                        span &copy; Земактив 2015
                    .block__link
                        a(href="#") О компании
                .left__block
                    .block__link
                        a(href="#") О проекте
                    .block__link
                        a(href="#") Контакты
            .footer__right 
                span Симферопольское шоссе, 70 км от МКАД, +7 (495) 249-55-55
    script(src="//api-maps.yandex.ru/2.1/?lang=ru_RU")
    script(src="scripts/main.concat.js")
    block scripts
